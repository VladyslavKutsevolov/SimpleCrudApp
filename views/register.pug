extends layout

block content
    form.form-group(method="POST" action="/users/register")
        label(for= "name") Name
        input#name.form-control(name="name", type="text")
        label(for= "email") Email
        input#email.form-control(name="email", type="email")
        label(for= "username") Username
        input#username.form-control(name="username", type="text")
        label(for= "password") Password
        input#password.form-control(name="password", type="password")
        label(for= "confirmPassport") Confirm Passport
        input#confirmPassport.form-control(name="confirmPassport", type="password")
        br
        input.btn.btn-primary(value="Submit", type="submit")
