extends layout

block content
    form.form-group(method="POST" action="/articles/edit/"+article._id)
        label(for= "title") Title
        input#title.form-control(name="title", value=article.title, type="text")
        br
        label(for= "author") Author
        input#author.form-control(name="author", value=article.author, type="text")
        br
        label(for= "body") Body
        textarea#body.form-control(name="body", type="text")= article.body
        br
        input.btn.btn-primary(value="Submit", type="submit")
